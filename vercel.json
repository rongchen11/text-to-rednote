{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/doubao-chat.js": {
      "maxDuration": 30
    },
    "api/doubao-images.js": {
      "maxDuration": 60
    },
    "api/payment/zpay-url.js": {
      "maxDuration": 30
    },
    "api/payment/zpay-webhook.js": {
      "maxDuration": 15
    }
  },
  "rewrites": [
    {
      "source": "/api/chat",
      "destination": "/api/doubao-chat"
    },
    {
      "source": "/api/images",
      "destination": "/api/doubao-images"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}